print("Hello! Welcome to the of Rock Paper Scissors!")

while (True):
    user1 = input("Player one, what do you chose: rock, paper or scissors?")
    if not (user1 == "rock" or user1 == "paper" or user1 =="scissors"):
        print ("Please player one, play either rock, paper or scissors!")
        continue
    else:
        user2 = input("Player two, what do you chose: rock, paper or Scissors?")
        if (user1 == user2 and user1 == "rock" or user1 == "paper" or user1 == "Scissors"):
            print ("That's a tie")
        elif (user1 == "rock" and user2 == "scissors"):
            print ("Player one won!")
        elif (user1 == "rock" and user2 == "paper"):
            print ("Player two won!") 
        elif (user1 == "scissors" and user2 == "rock"):
            print ("Player two won!")
        elif (user1 == "scissors" and user2 == "paper"):
            print ("Player one won!")
        elif (user1 == "paper" and user2 == "scissors"):
            print ("Player two won!") 
        elif (user1 == "paper" and user2 == "rock"):
            print ("Player one won!")
        else:
            print ("Please player two, play either rock, paper or sizors!")
            continue
        play_again = input("Do you wanna play again? ")
        if (play_again == "no"):
            print ("Bye")
            break
